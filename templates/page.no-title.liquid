<!-- /templates/page.liquid -->
<div class="grid page-no-title">
  <div class="grid__item large--five-sixths push--large--one-twelfth">

    <header class="section-header text-center">
      <h1>{{ page.title }}</h1>
      <hr class="hr--small">
    </header>
    
    {% if page.handle == 'livestock-raffle-winners' %}
   	 <div class="text-center loader"><img src="https://cdn.shopify.com/s/files/1/0616/3517/files/loader.gif?480" alt="Loading" /></div>
    {% endif %}
    <div class="grid">
      <div class="grid__item large--four-fifths push--large--one-tenth">
        <div class="rte rte--nomargin rte--indented-images">
          {{ page.content }}
        </div>
      </div>
    </div>

  </div>
</div>

