<div id="featured-product" data-section-id="{{ section.id }}" class="featured-product-custom featured-product-color_{{ section.id }}">
<div class="section-space">
<div class="header-padding">
  <div class="flex flex-space-between flex-align flex-break title-space">
     {%- if section.settings.title != blank -%}
      <h2 class="new-arrival-title"> {{ section.settings.title | escape }}</h2>
  	{%- endif -%}
    
    {% if section.settings.btn_link != blank  %}
    <a href="{{section.settings.btn_link}}" class="btn-hero-border btn-hero-border-hide">{{section.settings.btn-text}}</a>  
    {% endif  %}
    </div>
  

  {%- assign collection = collections[section.settings.collection] -%}

 


  <div class="grid grid--uniform grid_new_design-cover swiper-container">
    <div class="swiper-wrapper">
  {% for block in section.blocks %}
   {% include 'product--home-slide-cus', max_height: max_height, product: product, show_vendor: section.settings.show_vendor %}
   
   
    {% else %}

      {% for i in (1..product_limit) %}
        <li class="grid__item grid__item--{{section.id}} {{ grid_item_width }}">
          <div class="grid-view-item product-card">
            <a class="grid-view-item__link grid-view-item__image-container full-width-link" href="#">
              <span class="visually-hidden">{{ 'homepage.onboarding.product_title' | t }}</span>
            </a>
            <div class="grid-view-item__image-wrapper">
              {% capture current %}{% cycle 1, 2, 3, 4, 5, 6 %}{% endcapture %}
              {{ 'product-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
            <div class="h4 grid-view-item__title" aria-hidden="true">{{ 'homepage.onboarding.product_title' | t }}</div>
            {% include 'product-price' %}
          </div>
        </li>
      {% endfor %}
    {% endfor %}
      
      
      </div>
    <!-- Add Arrows -->
    <div class="swiper-button-next swiper-button-defult"><span class="circle-arrow"> {% include'arrow-cus' %}</span></div>
    <div class="swiper-button-prev swiper-button-defult"> <span class="circle-arrow">{% include'arrow-cus-prev' %}</span></div>
    <!-- Add Pagination -->
    <div class="swiper-scrollbar"></div>
  
  </div>

    {% if section.settings.btn_link != blank  %}
 	 <div class="text-center">
    <a href="{{section.settings.btn_link}}" class="btn-hero btn-hero-fill-desktop">{{section.settings.btn-text}}</a>  
  </div>
    {% endif  %}

</div>
</div>
</div>






<style>
 

 #featured-product.featured-product-custom  .new-arrival-title{
font-family: 'Roboto Condensed', sans-serif; letter-spacing:0px; text-transform:capitalize; margin:0; padding:0; font-weight:700;
  color:{{section.settings.heading_color}};}
 #featured-product.featured-product-custom .btn-hero-border{font-size:13px; color:{{section.settings.btn_text_color}}; border-bottom:{{section.settings.btn_text_color}} solid 2px;
  letter-spacing:1px;font-family: 'Roboto Condensed', sans-serif; font-weight: 700; text-transform:uppercase;}
 #featured-product.featured-product-custom .btn-hero-border:hover{color:{{section.settings.btn_text_colorh}};  border-bottom:{{section.settings.btn_text_colorh}} solid 2px;} 
  
#featured-product.featured-product-custom .swiper-button-defult {     top: calc(50% - 62px);}
  
  
#featured-product.featured-product-custom .grid_new_design img {    filter: none !important;}  
  
</style>

