  -webkit-transition: opacity .25s ease-in-out;
}
.grid_new_design .size_text{pointer-events:none; background:#555555;}
.grid_new_design .is-adding{background:#000; color:#fff;}

.grid-product__wrapper:hover .grid-hover-div-cover{opacity:1;}

.large-btn-cover .btn-large-custom {    font-size: 13px;    height: 47px;    padding: 14px 30px;}
  
  .grid_size-full  {width:100%; margin:0 0 6px; padding:0;}
  .right-col.grid_size-full li label {
    font-size: 14px;font-family: 'Roboto', sans-serif; font-weight:400;
    letter-spacing: 0;
}
.grid__image {margin: 0 auto 7px;}
  
 #featured-product .btn-hero-border{font-size:13px; color:{{section.settings.btn_text_color}}; border-bottom:{{section.settings.btn_text_color}} solid 2px;
  letter-spacing:1px;font-family: 'Roboto Condensed', sans-serif; font-weight: 700; text-transform:uppercase;}
 #featured-product .btn-hero-border:hover{color:{{section.settings.btn_text_colorh}};  border-bottom:{{section.settings.btn_text_colorh}} solid 2px;} 
  

.grid_new_design.swiper-slide {width: calc(25% - 16px) !important;    margin:0 8px;    padding:0;  }     
.swiper-container-horizontal > .swiper-scrollbar {position: inherit; left:12px; bottom:0; z-index: 50; height: 4px; opacity: 1 !important;}  
.grid-hover-div {margin-bottom:65px;}
.swiper-button-defult:after{display:none;}  
.swiper-button-defult{background:#fff; box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1); width:44px; height:44px; border-radius:50%;     top: calc(50% - 94px);}  
.swiper-button-defult .circle-arrow {line-height:normal; position:relative; top: 3px;}
  


.featured-product-color_{{ section.id }} .btn-hero{display:inline-block; background:{{section.settings.btn_bgm}}; color:{{section.settings.btn_text_colorm}}; 
 font-family: 'Roboto Condensed', sans-serif; font-weight: 700; font-size:13px;
  text-transform:uppercase; padding:14px 30px; letter-spacing:1px; margin-top:17px;
}  
.featured-product-color_{{ section.id }} .btn-hero:hover{ background:{{section.settings.btn_bghm}}; color:{{section.settings.btn_text_colorhm}}; }  
.second-img-hover {opacity: 0;}     
  
.image-collection {    padding-bottom: 100%;    position: relative;}  
  .image-collection img{position: absolute;
    object-fit: cover;
    height: 100%;
    width: 100%;
    left: 0;
    right: 0;
  }  
  
  
#ComparePrice{color:#888;letter-spacing:0; font-family: 'Roboto', sans-serif;     font-weight: 400;}  
#ComparePrice span{color:#888; letter-spacing:0; font-family: 'Roboto', sans-serif;     font-weight: 400;} 
  
@media(min-width:769px){  
.grid-product__wrapper:hover .second-img-hover {opacity: 1;}  
}
  
  
@media(max-width:768px){  
.grid-product__wrapper:hover .grid-hover-div-cover{opacity:0;}  
.grid_new_design.swiper-slide {width: calc(50% - 16px) !important;    }  
.grid-hover-div {margin-bottom:38px;}  
.title-space {margin-bottom:7px;}  
.new-arrival-title{font-size:26px;}  
.swiper-button-defult{width:37px; height:37px;} 
    .swiper-scrollbar{max-width:420px; margin:0 auto;}
} 
  
@media(min-width:768px){  
  .featured-product-color_{{ section.id }} .btn-hero-fill-desktop{display:none;}  
}
  
@media(max-width:767px){
.new-arrival-title{font-size:22px;}  
.grid-hover-div {margin-bottom:28px;}    
.grid_new_design-cover{margin:0 -5px !important;}  
.grid_new_design.swiper-slide {width: calc(50% - 10px) !important;   margin:0 5px;   }   
.featured-product-color_{{ section.id }} .btn-hero-border-hide{display:none;}  
.vendor_grid{font-size:10px; }
.new-arrival-title{font-size:26px;}
.grid-product__grid{font-size:12px; line-height:17px;}
.grid_new_design .grid-product__price{font-size:12px;}
.large-btn-cover .btn-large-custom {    font-size: 13px !important;    height: 46px;    padding: 14px 30px !important;}
.grid_new_design{width:50%;}
.swiper-button-defult{display:none;}
.featured-product-color_{{ section.id }} .btn-hero{margin-top:36px;}
.swiper-container-horizontal > .swiper-scrollbar{height:3px;}  
}
  
  
</style>

