.grid_new_design .grid-product__meta{text-align:left;}
.vendor_grid{font-size:13px; font-weight:700; text-transform:uppercase; color:#888888; font-family: 'Roboto Condensed', sans-serif; letter-spacing:1px;}
.grid-product__grid{font-size:14px; line-height:22px; font-family: 'Roboto', sans-serif; font-weight:400;  color:#000; letter-spacing:0; display:block;}
.grid_new_design .grid-product__price{font-size:14px;font-family: 'Roboto', sans-serif; font-weight:400;  color:#000; letter-spacing:0;}
.grid_new_design fieldset {  text-align:left;  padding:10px 0px !important;      min-height: inherit !important;  margin: 0px !important;}
.grid_new_design fieldset label { background:transparent !important; border:0px !important;  padding: 0px !important;  padding-right: 12px !important;     margin: 0px !important;    font-size: 14px !important;    font-family: 'Roboto', sans-serif;
    font-weight: 400;    text-align: left; color:#000;}

.grid_new_design fieldset label.disabled {    display: none;}
.grid_new_design .grid_size-full .radio-wrapper .single-option-radio label.selected-label{  font-size: 14px !important; font-weight:700; border:0px !important;}

.grid-hover-div{position:relative;}
