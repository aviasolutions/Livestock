{% if section.settings.enable_linkableimg == true %}
<div class="grid-uniform  grid--full">
    
  {% for block in section.blocks %}
  <div class="grid__item grid-custom medium--one-half large--one-quarter small--one-half">
    {% if block.settings.slide_link != blank %}
    <a href="{{block.settings.slide_link}}">{% endif %}
      
    <img src="{{ block.settings.image | img_url:'original' }}" />
      {% if block.settings.slide_link != blank %}
    </a>{% endif %}
    {% if block.settings.heading != blank %}
    <p class="top-left-img">{{block.settings.heading}}</p>
    {% endif %}
  </div>
  {% endfor %}
  

</div>
  {% endif %}

{% comment %}
<script>
{% endcomment %}
{% schema %}
  {
    "name": "4 Linkable img sec 2",
    "class": "custom-section-8",
    "max_blocks": 4,
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_linkableimg",
        "label": "Enable this section",
        "default": true
      }   
    ],
    "blocks" : [
      {
        "type": "image",
        "name": "Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },                
          {
            "type": "text",
            "id": "heading",
            "label": "Text",
            "default": "Text "
          },          
          {
            "type": "url",
            "id": "slide_link",
            "label": "link"
          }
        ]
      }
    ]
  }
{% endschema %}