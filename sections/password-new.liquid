<link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700;900&display=swap" rel="stylesheet">
<link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:wght@400;700&display=swap" rel="stylesheet">

<div class="password-new">
   {% if section.settings.title != blank %} <span class="password-top">{{section.settings.title}}</span> {% endif %}
<div class="password-new-left">
  <div class="password-new-left-inner">

 {% if section.settings.logo != blank %}  <div class="password-logo">{{section.settings.logo}}</div>  {% endif %}
 {% if section.settings.title-main != blank %}  <h2>{{section.settings.title-main}}</h2>  {% endif %}
    {% if section.settings.description != blank %}<div class="password-description">  {{section.settings.description}} </div>{% endif %}
  
    {% if section.settings.show_share_buttons %}
  	<div class="password-page__social-sharing">
    <p class="share-text">{{section.settings.share-title}}</p>
    {% include 'social-sharing-password' %}
  </div>
  {% endif %}
  </div>
 </div>
    {% if section.settings.image != blank %} 
<div class="password-new-right">
  <div class="password-overlay"></div>
  <img src="{{section.settings.image | img_url:'master'}}">
  </div>

 {% endif %}
</div>



<style>
  
  .password-new{ display: -webkit-box;
  display: -moz-box;
  display: -ms-flexbox;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -moz-box-align: center;

  -ms-flex-align: center;
  -webkit-align-items: center;
  align-items: center; position:relative;}
  .password-new-left{width:50%; position:relative;}
  .password-new-right{width:50%;}
  
  .password-new-left-inner{max-width:410px; padding:0 15px; box-sizing:border-box; margin:0 auto; text-align:left;}
   .password-top{color:#888888; font-size:13px; letter-spacing:1px; font-family: 'Roboto Condensed', sans-serif; position:absolute; top:20px; left:30px; z-index:1;
    font-weight: 700; text-transform:uppercase;}
  .password-new-left-inner h2{font-family: 'Roboto Condensed', sans-serif;    font-weight: 700; font-size:36px; color:#000; margin:0; padding:6px 0 8px;}
  .password-description{font-size:14px; line-height:22px; font-family: 'Roboto', sans-serif;
    font-weight: 400; color:#555555; letter-spacing:0;}
  .share-text{font-size:14px; line-height:22px; font-family: 'Roboto', sans-serif;
    font-weight: 400; color:#555555; letter-spacing:0; margin:0; padding:0;}
  
  .social-sharing-div.clean a{margin-right:12px;}  
  .social-sharing-div.clean a:hover{color:#888888;}
  .social-sharing-div.clean {    margin-top: 12px;}
  .password-page__social-sharing {    margin-top: 19px;}
.password-new-right img {    height: 100vh;    object-fit: cover;    width: 100%;    display: block;}
  
  
@media(max-width:768px){
.password-new{
-webkit-flex-flow: row wrap;
flex-flow: row wrap; 
-ms-flex-flow: row wrap; position:relative;
}
.password-new-left{width:100%; position:absolute; top:50%; left:0; right:0; width:100%; margin:0 auto; transform: translateY(-50%); -webkit-transform: translateY(-50%);
-moz-transform: translateY(-50%); z-index:1;
}  
.password-new-right{width:100%; position:relative;}  
.password-new-left-inner{text-align:center;}  
.password-overlay{background:#fff; opacity:0.8; position:absolute; top:0; left:0; right:0; bottom:0; width:100%;} 
  .social-sharing-div.clean a{margin:0 10px;}  
  .password-top{left:0; right:0; text-align:center; width:100%; padding:0 10px; box-sizing:border-box;}
} 
  
@media(max-width:767px){
.password-new-left-inner h2{font-size:32px;}
}  
  
</style>



{% schema %}
  {
    "name": "Password",
    "settings": [
     {
      "type": "image_picker",
      "id": "image",
      "label": "Background image"
     }, 
     {
      "type": "text",
      "id": "title",
      "label": "Heading Top",
      "default": "Check back with us in 15 minutes"
     },
     {
      "type": "textarea",
      "id": "logo",
      "label": "Logo Svg"
     },
     {
      "type": "text",
      "id": "title-main",
      "label": "Heading",
      "default": "We’ll be right back!"
     },
     {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "We’ll be right back!"
     },
     {
        "type": "header",
        "content": "Social sharing"
     },
     {
      "type": "text",
      "id": "share-title",
      "label": "text",
      "default": "Follow us on social media to stay up-to-date"
     }, 
     {
      "type": "checkbox",
      "id": "show_share_buttons",
      "label": "Show social sharing buttons",
      "default": true
     }
]
  }
{% endschema %}

