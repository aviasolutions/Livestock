
<section class="blk-image-gallery-one">
  <div class="wrapper">
    <div class="grid">
      {% for block in section.blocks %}
        {% if block.type == "image" %}
          {% assign grid_class="" %}
            {% if block.settings.image_type == "one" %}
              {% assign grid_class="one-whole small--one-whole full_whole full_whole_top" %}
            {% elsif block.settings.image_type == "two" %}
              {% assign grid_class="one-half small--one-whole full_whole" %}
            {% elsif block.settings.image_type == "three" %}
              {% assign grid_class="one-third small--one-whole full_whole" %}
            {% elsif block.settings.image_type == "four" %}
              {% assign grid_class="one-quarter small--one-whole full_whole" %}
            {% endif %}
          <div class="grid__item {{grid_class}}">
            <div class="image-wrapper">
              {% if block.settings.image != blank %}
                <a
                 href="{{block.settings.btn_url}}">
              	{% assign img_url = block.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
                <img class="lazyload"
                     src="{{ block.settings.image | img_url: '300x' }}"
                     data-src="{{ img_url }}"
                     data-widths="[540, 720, 900, 1080, 1296, 1512, 1728, 1944, 2048, 4472]"
                     data-aspectratio="{{ block.settings.image.aspect_ratio }}"
                     data-sizes="auto"
                     data-parent-fit="cover"
                     alt="{{ block.settings.image.alt | escape }}">
              {% else %}
                  {{ 'lifestyle-1' | placeholder_svg_tag }}
              {% endif %}
                 {% if block.settings.btn_url != blank and block.settings.btn_text != blank %}
              <div class="image-description color--{{ block.id }} {{block.settings.text_align}}">
                <a class="btn"
                   href="{{block.settings.btn_url}}"
                   style="background-color: {{block.settings.btn_bg_color}};color:{{block.settings.btn_text_color}}"
                   >{{block.settings.btn_text}}</a>
              </div>
                  </a>
            {% endif %}
            </div>

         
          </div>
        {% endif %}
      	{% if block.type == "title" %}
      		{% if block.settings.title != blank %}
              <div class="grid__item one-whole">
                <h3 class="title_shop_by">{{block.settings.title}}</h3>
              </div>
      		{% endif %}
		{% endif %}
      
      
      <style>
        .blk-image-gallery-one .image-description.color--{{ block.id }} a.btn:hover{background:{{block.settings.btn_bg_colorh}} !important; }
      </style>
      
      {% endfor %}
    </div>
  </div>
</section>






<style>
  .blk-image-gallery-one .image-wrapper{position:relative;}
 .blk-image-gallery-one .image-description {
    position: absolute;
    left: 0;
    right: 0;
    margin: 0 auto; text-align:center;
    top: 50%;
    transform: translateY(-50%);  -moz-transform: translateY(-50%);  -webkit-transform: translateY(-50%);
}
  
  .title_shop_by{text-transform:uppercase; margin:40px 0 15px; padding:0;}
  
.full_whole{margin-bottom:30px;}
.blk-image-gallery-one .image-description a.btn {    font-size: 14px;    padding: 7px 24px;    text-transform: uppercase; min-width:200px;}

  .image-description{padding:0 15px; box-sizing:border-box;} 
  .blk-image-gallery-one .image-description.left_align {    text-align: left;}
  .blk-image-gallery-one .image-description.right_align {    text-align: right;}
  
  
</style>






