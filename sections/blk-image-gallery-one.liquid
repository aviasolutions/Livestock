            }
          ],
          "default": "one"
        },
        {
           "type":      "select",
           "id":        "text_align",
           "label":     "Text",
           "options": [
             {
               "group": "left",
               "value": "left_align",
               "label": "Left Text"
             },
             {
               "group": "center",
               "value": "center_align",
               "label": "center Text"
             },
 			{
               "group": "Right",
               "value": "right_align",
               "label": "Right Text"
             }
           ],
           "default":"center_align"

        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "btn_text",
          "label": "Button Text"
        },
        {
          "type": "url",
          "id": "btn_url",
          "label": "Button URL"
        },
        {
          "type": "color",
          "id": "btn_text_color",
          "label": "Text Color",
          "default": "#ffffff"
        },
        {
          "type": "color",
          "id": "btn_bg_color",
          "label": "Button Background Color",
          "default": "#000000"
        },
 {
      "type": "color",
      "id": "btn_bg_colorh",
      "label": "Button Background hover",
	  "default": "#1e988a"
    }
      ]
    },
    {
      "type": "title",
      "name": "Title",
      "settings": [{
        "type": "text",
        "id": "title",
        "label": "Title"
      }]
    }
  ]
}
