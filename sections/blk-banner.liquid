{% if section.settings.enable_banner %}
<section class="blk-banner">
  <div class="wrapper">
    <div class="grid">
      <div class="grid__item one-whole">
        <div class="image-wrapper">
          {% if section.settings.image != blank %}
            {% assign img_url = section.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}
            <img class="lazyload"
                 src="{{ section.settings.image | img_url: '300x' }}"
                 data-src="{{ img_url }}"
                 data-widths="[540, 720, 900, 1080, 1296, 1512, 1728, 1944, 2048, 4472]"
                 data-aspectratio="{{ section.settings.image.aspect_ratio }}"
                 data-sizes="auto"
                 data-parent-fit="cover"
                 alt="{{ section.settings.image.alt | escape }}">
          {% else %}
          	{{ 'lifestyle-1' | placeholder_svg_tag }}
          {% endif %}
          
          
             {% if section.settings.btn_url != blank and section.settings.btn_text != blank %}
        <div class="image-description {{section.settings.text_align}}">
          <a class="btn"
             href="{{section.settings.btn_url}}"
             style="background-color: {{section.settings.btn_bg_color}};color:{{section.settings.btn_text_color}}"
             >{{section.settings.btn_text}}</a>
        </div>
        {% endif %}
        </div>
     
      </div>
    </div>
  </div>
</section>
{% endif %}


<style>
  .blk-banner {margin-bottom:50px;}
  .blk-banner .image-wrapper{position:relative;}
 .blk-banner .image-description {
    position: absolute;
    left: 0;
    right: 0;
    margin: 0 auto; text-align:center;
    top: 50%;
    transform: translateY(-50%);  -moz-transform: translateY(-50%);  -webkit-transform: translateY(-50%);
}
  .blk-banner .image-description a.btn {    font-size: 14px;    padding: 7px 24px;    text-transform: uppercase; min-width:200px;}
  .blk-banner .image-description a.btn:hover{background:{{section.settings.btn_bg_colorh}} !important;}
  
    .image-description{padding:0 15px; box-sizing:border-box;} 
.blk-banner .image-description.left_align {    text-align: left;}
  .blk-banner .image-description.right_align {    text-align: right;}
</style>



{% schema %}
{
  "name": "Banner",
  "settings": [{
      "type": "checkbox",
      "id": "enable_banner",
      "label": "Enable Banner",
      "default": true
    },
{
           "type":      "select",
           "id":        "text_align",
           "label":     "Text",
           "options": [
             {
               "group": "left",
               "value": "left_align",
               "label": "Left Text"
             },
             {
               "group": "center",
               "value": "center_align",
               "label": "center Text"
             },
 			{
               "group": "Right",
               "value": "right_align",
               "label": "Right Text"
             }
           ],
           "default":"center_align"

        },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "btn_text",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "btn_url",
      "label": "Button URL"
    },
    {
      "type": "color",
      "id": "btn_text_color",
      "label": "Text Color",
	  "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "btn_bg_color",
      "label": "Button Background Color",
	  "default": "#000000"
    },
  {
      "type": "color",
      "id": "btn_bg_colorh",
      "label": "Button Background hover",
	  "default": "#1e988a"
    }
  ]
}
{% endschema %}

