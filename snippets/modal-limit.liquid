<div id="limit-modal" class="modal-front" style="">
	<h3><strong>Sorry, there's a limit on this product.</strong></h3>
	<div id="limit-modal-text">
		<p>Sorry!  This product has a strict limit of <span id="limit"></span> per customer.</p>
		<p>Any customer who places multiple orders exceeding the maximum allowed will have ALL orders cancelled and refunded.</p>
		<p><a href="{{shop.url}}" class="action_button">&larr; Continue Shopping</a>  <a href="/cart" class="action_button">Review your cart</a></p>
	</div>
	<div class="modal-close fa fa-times"></div>
</div>
<script>
$().ready(function() {
	
	$(".modal-close").click(function() {
		$(".modal-back").fadeOut();
		$(this).parent().fadeOut();
	});
	
	$('.modal-back').click(function() 
	{
		$(".modal-back").fadeOut();
		$('.modal-front').each(function(){$(this).fadeOut();});
	});

	$(document).keyup(function(e) {
		if (e.keyCode == 27)
		{
			if($("#availability-modall:visible").length)
			{
				$(".modal-back").fadeOut();
				$(".modal-front").each(function(){
					$(this).fadeOut();

				});
			}
		}
	});
  
});

</script>

