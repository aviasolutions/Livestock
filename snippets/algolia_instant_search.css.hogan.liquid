.ais-facets {
	flex: 0 0 100%;
	position: fixed;
    top: 0;
    left: 0;
	height: 100vh;
	height: var(--app-height);
	height: -webkit-fill-available;
	width: 100vw;
	transition: all 1s;
	max-width: 450px;
	transition: all 0.6s;
	transform: translateX(-100%);
	z-index: 999999;
	background: #fff;
	border: 1px solid #E6E7E8;
}

.ais-facets__content {
	height: calc(100% - 111px);
	overflow: auto;
	padding: 0 24px;
}

.ais-page::before {
	content: '';
	position: absolute;
	right: 0;
	top: 0;
	width: 100%;
	height: 100%;
	background: rgba(0, 0, 0, 0.7);
	opacity: 0;
	visibility: hidden;
	transition: all 0.6s;
	z-index: 99999;
}

.filtering .ais-facets {
	transform: translateX(0);
}

.filtering .ais-page::before {
	opacity: 1;
	visibility: visible;
}

html.filtering,
body.filtering {
	overflow: hidden;
    position: relative;
    height: 100%;
}

